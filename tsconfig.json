{
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "node",
    "outDir": "lib",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "importHelpers": true
  },
  "include": ["src"]
}
